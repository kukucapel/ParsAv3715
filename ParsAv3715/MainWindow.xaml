<Window x:Class="ParsAv3715.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ParsAv3715"
        mc:Ignorable="d"
        Title="Av3715" Height="800" Width="650" ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="0.25*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button Content="Скачать" HorizontalAlignment="Center" Click="Downloader" Grid.Row="1" Margin="0 30 0 30" MinWidth="200px" Width="auto"/>
        <TextBox Grid.Row="0" MinWidth="630px" MinHeight="580" Width="auto" Height="auto" x:Name="Urls" AcceptsReturn="True" HorizontalAlignment="Center" TextWrapping="Wrap" VerticalAlignment="Top" UndoLimit="1000"/>
        
    </Grid>
</Window>
